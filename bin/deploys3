#!/usr/bin/env bash

. '.env'

if [[ -z $DOMAIN ]]; then
	echo "Must specify bucket/domain in .env file."
	echo "Exiting..."
	exit 1
fi

if [[ -z $DIST_DIR ]]; then
	echo "Must specify \$DIST_DIR in .env file."
	echo "Exiting..."
	exit 1
fi

minute=60
hour=3600
day=86400
year=31536000

# refresh all objects in bucket
# aws s3 rm "s3://$DOMAIN/" --recursive

aws s3 sync \
	--cache-control "max-age=$year" \
	--exclude "*.html" \
	"$DIST_DIR/" "s3://$DOMAIN/"

aws s3 sync \
	--cache-control "max-age=$minute" \
	--exclude "*" \
	--include "*.html" \
	"$DIST_DIR/" "s3://$DOMAIN/"

